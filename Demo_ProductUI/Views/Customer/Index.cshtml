@using EntityLayer.Concrete
@model List<Customer>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_UILayout.cshtml";
}

<table class=" table table-bordered">
    <tr>
        <th>#</th>
        <th>İsim</th>
        <th>Şehir</th>
        <th>Meslek</th>
        <th>Sil</th>
        <th>Düzenle</th>
    </tr>
    @foreach(var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Name</td>
            <td>@item.City</td>
            <td>@item.Job.Name</td> @* ilişkili veri tabanından getirdik *@
            <td><a class="btn btn-outline-danger" href="/Customer/DeleteCustomer/@item.Id"/>Sil</td>
            <td><a class="btn btn-outline-warning" href="/Customer/UpdateCustomer/@item.Id"/>Güncelle</td>
        </tr>
    }
</table>
<a href="/Customer/AddCustomer/" class="btn btn-outline-primary">Yeni Müşteri</a>

